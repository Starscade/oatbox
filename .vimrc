colorscheme blue

set autoindent
set autoread
set clipboard+=unnamedplus " NeoVIM
set fileformats=unix
set laststatus=0 " NeoVIM
set lcs+=space:_
set list
set mouse=a
set noexpandtab
set number
set scrolloff=999
set showtabline=2
set shiftwidth=2
set smartindent
set tabstop=2

syntax on

hi MsgArea ctermfg=44 " NeoVIM
hi StatusLine ctermbg=17 ctermfg=44
hi TabLine ctermbg=17 ctermfg=44
hi TabLineSel ctermbg=44 ctermfg=17

let g:loaded_matchparen=1
let g:loaded_node_provider=0 " NeoVIM
let g:loaded_perl_provider=0 " NeoVIM
let g:loaded_python3_provider=0 " NeoVIM
let g:loaded_ruby_provider=0 " NeoVIM
